<!DOCTYPE html>
{{ 
    //
    // Name:        contact_email
    //
    // Description: template for email with the new contact info.
    //
    // Parameters:  contact - The current contact
    //
    // Version:     1.0 2014-11-14 13:45:52 leansy@sednove.com Initial Version
    //

    %include "/extenso/functions/sn_ct.snc"; 
    %include "/extenso/functions/sn_pages.snc"; 

    config = config();
    use lg;             // Loop from the publish
    use structure;      // loop from the publish over sn_structure
    use ressource;
}}
\{{   
    use contact;          
    config = sql(single:true,"select * from sn_configs");
    url_prod = config.rows.url_prod;
}}
<html lang="{{lg.rows.lg}}" class="login_html">
    <head>
        <meta http-equiv="Content-type" content="text/html;charset=UTF-8"/>
        <title>{{esc(filter:"html",structure.rows{"meta_title_" .+ lg.rows.lg});}}</title>
        <!-- Generated by {{ user.username; " " ; datetime();  " "; files = filenames(); for file in files.filenames do file; " ;  "; endfor }} -->
    </head>
    <body class="sn login_body error_body">
        <div id="login">
            <div class="login-logo-header login-demande-wrapper row">
                <img src="\{{url_prod}}/extenso/images/logo-client.png" alt=""/>
            </div><!--END login-header-->
			<br/>
            <div class="login-header login-demande-wrapper">
                {{sn_ct(edit:false,"contact contact message info", publish:"/publish/ressources.sn",uids:ressource.rows.uid,module:"contacts")}}
            </div><!--END login-header-->
			<hr />
            <div class="login-general login-demande-wrapper login-demande-wrapper-email">
                    <table class="container-fluid">
                        <tr class="row ln">
                            <td class="left" width="200">
                                <label>
                                    {{sn_ct(edit:false,"contact Nom", publish:"/publish/ressources.sn",uids:ressource.rows.uid,module:"contacts")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>\{{contact.rows.name}}</label>
                            </td>
                        </tr>  
                        <tr class="row ln">
                            <td class="left">
                                <label>
                                    {{sn_ct(edit:false,"contact Company", publish:"/publish/ressources.sn",uids:ressource.rows.uid,module:"contacts")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>\{{contact.rows.company}}</label>
                            </td>
                        </tr>  
                        <tr class="row ln">
                            <td class="left">
                                <label>
                                    {{sn_ct(edit:false,"contact Courriel", publish:"/publish/ressources.sn",uids:ressource.rows.uid,module:"contacts")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>\{{contact.rows.email}}</label>
                            </td>
                        </tr> 
                        <tr class="row ln">
                            <td class="left">
                                <label>
                                    {{sn_ct(edit:false,"contact Message", publish:"/publish/ressources.sn",uids:ressource.rows.uid,module:"contacts")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>
                                    \{{contact.rows.message}}
                                </label>
                            </td>
                        </tr>                                                                                                                          
                    </table>
            </div> <!-- END login_content -->
        </div><!--end/ LOGIN WRAPPER-->
    </body>
</html>