<!DOCTYPE html>
{{ 
    //
    // Name:        email_forget_password
    //
    // Description: template for email user with a new link.
    //  
    // Parameters:  finduser - redirect to this page when login
    //
    // Version:     1.0 2013-11-22 07:31:52 laplante@sednove.com Initial Version
    //

    %include "/extenso/functions/sn_ct.snc"; 
    %include "/extenso/functions/sn_pages.snc"; 

    config = config();
    use lg;             // Loop from the publish
    use structure;      // loop from the publish over sn_structure
}}
\{{
    use cgidata;            
    config = sql(single:true,"select * from sn_configs");
    url_prod = config.rows.url_prod;

    use finduser;               

    time = time();
    secs = time.secs + 86400;
    link = { "uid" : finduser.rows[0].uid, "secs" : secs };
    encrypted_link = crypt(key:"aj58fla74jdna63g",value:link);

}}
<html lang="{{lg.rows.lg}}" class="login_html">
    <head>
        <meta http-equiv="Content-type" content="text/html;charset=UTF-8"/>
        <title>{{esc(filter:"html",structure.rows{"meta_title_" .+ lg.rows.lg});}}</title>
        <link rel="stylesheet" href="\{{url_prod}}/extenso/css/jquery-ui.css"  type="text/css"/>
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600italic,600,700,300,300italic' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="\{{url_prod}}/extenso/fonts/special_font.css"/>
        <link rel="stylesheet" type="text/css" href="\{{url_prod}}/extenso/css/bootstrap.css"/>
        <link rel="stylesheet" type="text/css" href="\{{url_prod}}/extenso/css/sn-overwrite-bootstrap.css"/>
        <link rel="stylesheet" type="text/css" href="\{{url_prod}}/extenso/css/style.css"/>
        <link rel="stylesheet" type="text/css" href="\{{url_prod}}/extenso/css/pretty_checkable.css"/>
        <!--[if IE]>
        <link href="\{{url_prod}}/extenso/css/ie.css" rel="stylesheet" type="text/css" >
        <![endif]-->
        <meta name="description" content="{{esc(filter:'html',structure.rows{'meta_description_' .+ lg.rows.lg}); }}">
        <meta name="keywords" content="{{esc(filter:'html',structure.rows{'meta_kw_' .+ lg.rows.lg}); }}">
        <meta name="author" content="{{esc(filter:'html',structure.rows{'meta_author_' .+ lg.rows.lg}); }}">
        <meta name="generator" content="{{ sn_ct_extenso('Sednove/Extenso 5.0',lg.rows.lg); }}">
        <meta name="application-name" content="Extenso">
        <meta name="ICBM" content="{{esc(filter:'html',structure.rows{'meta_icbm_' .+ lg.rows.lg}); }}">
        <meta name="geo.region" content="{{esc(filter:'html',structure.rows{'meta_georegion_' .+ lg.rows.lg}); }}">
        <meta name="geo.placename" content="{{esc(filter:'html',structure.rows{'meta_geoplacename_' .+ lg.rows.lg}); }}">
        <meta name="geo.position" content="{{esc(filter:'html',structure.rows{'meta_geoposition_' .+ lg.rows.lg}); }}">
        <!-- Generated by {{ user.username; " " ; datetime();  " "; files = filenames(); for file in files.filenames do file; " ;  "; endfor }} -->
    </head>
    <body class="sn login_body error_body">
        <div id="login">
            <div class="login-logo-header login-demande-wrapper row">
                <img src="\{{url_prod}}/extenso/images/logo-client.png" alt="logo client"/>
            </div><!--END login-header-->
            <div class="login-header login-demande-wrapper">
                {{sn_ct_extenso("Change your password",lg.rows.lg);}}
            </div><!--END login-header-->
            <div class="login-general login-demande-wrapper login-demande-wrapper-email">
                    <div class="container-fluid">
                        <div class="row ln">
                            <div class="left">
                                <label>{{sn_ct_extenso("Username",lg.rows.lg);}}</label>
                            </div>
                            <div class="right">
                                <label>\{{finduser.rows[0].username}}</label>
                            </div>
                        </div>
                    </div>

                    <p><br/>
                        {{ sn_ct_extenso("Follow this link to change your password. This link is valid for one day.",lg.rows.lg) }} 
                    </p>
                    <p><br/>
                    <a class="a-button" href="\{{url_prod}}{{sn_pages("change_password",lg.rows.lg); }}?k=\{{ encrypted_link }}">
                        {{ sn_ct_extenso("cliquer ici courriel",lg.rows.lg) }}
                    </a>
                    </p>

            </div> <!-- END login_content -->
            <div class="credit row login-wrapper">
                <a href="http://www.sednove.com" class="logo"> <img src="\{{url_prod}}/extenso/images/logo-extenso.png" alt="{{sn_ct_extenso("Logo of Extenso",lg.rows.lg);}}" /></a> 
                <p>{{sn_ct_extenso("a powerful contect management system developped and distributed by",lg.rows.lg);}} 
                <a href="http://www.sednove.com/{{lg.rows.lg}}"><strong>Sednove</strong>.</a></p>
            </div>
        </div><!--end/ LOGIN WRAPPER-->
    </body>
</html>
