<!DOCTYPE html>
{{ 
	use lg;			// Function publish use context lg
	use page;		// Function publish use context page for the content of the page
	use user;		// From sn_preload

	%include "/extenso/functions/sn_widgets.snc"; 
}}
\{{ 
	config=config(); 
	page={"uid":"{{page.rows.uid}}","url":"{{page.rows{'folder_' .+ lg.rows.lg}; page.rows{'page_' .+ lg.rows.lg};}}"}; // use by menus
}}
<html lang="{{lg.rows.lg}}">
    <head>
		{{ %include "/includes/header.sn"; }}
        <!-- Generated by {{ user.username; " " ; datetime();  " "; files = filenames(); for file in files.filenames do file; " ;  "; endfor }} -->
    </head>
    <body>
		\{{ 
			if config.site eq "staging" then 
				client_has_bootstrap = true; 
				if user.lg ne "" then
					include("/extenso/html/extranet/" .+ user.lg .+ "/fullpage.snc");
				else
					include("/extenso/html/extranet/fr/fullpage.snc"); 
				endif
			endif
		}}
		<div class="comsoc">
			\{{ include("/" .+ config.site .+ "/includes/{{lg.rows.lg}}/header.snc"); // Load top page }}
			
			
			{{ nb_widget = sql(single:true,"select count(*) as nb from sn_widgets_list where position = 'haut' and uid_page = '?' and table_name = 'pages'", page.rows.uid);
				if nb_widget.rows.nb == 0 then 
			}}	
				<div class="full-width bgLightGray hidden-xs hidden-sm">
					<div class="container">
						{{ sn_widgets(add:true,table:"pages",uid:page.rows.uid,lg:lg,position:"haut"); }}
						<img src="/sn_uploads/topImage.gif" alt="alt2">
					</div>
				</div>
			{{ else }}
				{{ sn_widgets(add:true,table:"pages",uid:page.rows.uid,lg:lg,position:"haut"); }}
			{{ endif }}
 
			{{ // <!-- Content --> }}
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-9">
						<div id="content" class="sn_pencil" data-sn_link1="/extenso/extranet/template_base/{{lg.rows.lg}}/edit.snc?uid={{page.rows.uid}}&sn_uniq=yes&sn_modal=t" 
							data-sn_class1="edit" data-sn_title1="Deux colonnes">
							{{ content = sql(single:true,"select * from sn_template_base where uid = '?'", page.rows.uid); }}
							<h1>{{content.rows{"titre_" .+ lg.rows.lg}; }}</h1>
							<div id="content-wrap">
								{{content.rows{"texte_" .+ lg.rows.lg}; }}
								{{ sn_widgets(add:true,table:"pages",uid:page.rows.uid,lg:lg,position:"centre"); }}
							</div>
						</div>
					</div>
					<div class="col-md-3">
						<div id="right-col">
							{{ sn_widgets(add:true,table:"pages",uid:page.rows.uid,lg:lg,position:"droite"); }}
						</div>
					</div>
				</div>
			</div>

			\{{ include("/" .+ config.site .+ "/includes/{{lg.rows.lg}}/footer.snc"); // Load footer }}

         </div>
    </body>
</html>
