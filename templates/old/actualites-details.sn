\{{ cgi=cgidata();}}

\{{	actualite = sql(single:true,"select * from actualites where actif='oui' and uid = '?'", cgi.u); }}
\{{ if actualite.nbrows > 0 then }}
	<div class="gallery-wrap pull-left">
		\{{	images = sql(single:true, "select count(*) as nb from actualites_images where uid_actualite = '?'", cgi.u); }}
		\{{ if actualite.rows.sn_dir_miniature ne "" && actualite.rows.miniature ne "" then }}
			<div class="img-wrap">
				<a href="javascript:void(0);" onClick="show_box(this);"><img src="\{{actualite.rows.miniature;}}" alt="\{{actualite.rows{'alt_'.+ lg.rows.lg};}}" \{{ if images.rows.nb > 0 then }}data-next="gallery_img2"\{{ endif }} data-caption="Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut labore et dolore magnam aliquam quaerat voluptatem." /></a>                                
			</div>
		\{{ endif }}
		\{{ if images.rows.nb > 0 then }}<div class="row">\{{ endif }}
			\{{ for i sql("select * from actualites_images where uid_actualite = '?'", cgi.u) do }}
				<div class="col-xs-3">
					<div class="img-wrap thumb small">
						<a href="javascript:void(0);" onClick="show_box(this);"><img src="\{{i.rows.image;}}" alt="" id="gallery_img\{{sn_nb1;}}" \{{ if sn_nb1 < i.nbrows then }}data-next="gallery_img\{{sn_nb1+1;}}"\{{ endif }} \{{ if sn_nb1 > 1 then }}data-prev="gallery_img\{{sn_nb1-1;}}"\{{ endif }} data-caption="Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut labore et dolore magnam aliquam quaerat voluptatem." /></a>                                        
					</div>
				</div>
			\{{ endfor }}
		\{{ if images.rows.nb > 0 then }}</div><!-- /.row-->\{{ endif }}	
	</div>
	<a class="return" href="javascript:window.history.go(-1);"><i class="fa fa-angle-double-left left"></i>Retour</a>
	<h2 class="gray">\{{actualite.rows.titre_{{lg.rows.lg}};}}</h2>
	<p class="red">
		\{{ if {{lg.rows.lg}} eq "fr" then
			datetime(lg:{{lg.rows.lg;}}, date:actualite.rows.adate,format:"%e %B %Y");
		else
			datetime(lg:{{lg.rows.lg;}}, date:actualite.rows.adate,format:"%B %e, %Y");
		endif }}
	</p>
	\{{actualite.rows.texte_{{lg.rows.lg}};}}
	<div class="btns-wrap">
		\{{ if actualite.rows.url_{{lg.rows.lg}} ne "" then }}
			<a class="btn btn-gradient" href="\{{actualite.rows.url_{{lg.rows.lg}};}}" target="_blank"><i class="fa fa-link red"></i> Consulter le site web</a>
		\{{ endif }}
		\{{ if actualite.rows.pdf_{{lg.rows.lg}} ne "" then }}
			<a class="btn btn-gradient" href="\{{actualite.rows.pdf_{{lg.rows.lg}};}}" target="_blank"><i class="fa fa-file-text-o red"></i> Documentation</a>
		\{{ endif }}
	</div>
\{{ else }}
