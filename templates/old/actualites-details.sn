<!-- Slider -->
<script>
$(function(){
	$('.bxslider').bxSlider({
		mode: 'fade',
		auto:true,
		speed: '600',
		controls : false,
		pause : '2000',
		adaptiveHeight: true,
		infiniteLoop: true,
		responsive: true,
		slideMargin: 0
	});
}); 
</script>

		<div class="full-width bgLightGray hidden-xs hidden-sm">
