<!DOCTYPE html>
{{ 
    // --------------------------------------------------------------------------
    // Name:        contact_email
    //
    // Description: template for email with the new contact info.
    //
    // Version:     1.0 2014-11-14 13:45:52 leansy@sednove.com Initial Version
    // --------------------------------------------------------------------------

    %include "/extenso/functions/sn_ct.snc"; 
    %include "/extenso/functions/sn_pages.snc"; 

    config = config();
    use lg;             // Loop from the publish
    use structure;      // loop from the publish over sn_structure
    use ressource;
    use page;
}}
\{{   
    use contact; 
    site_config = config(); 
    config = sql(single:true,"select * from sn_configs");
    base_url = config.rows.url_staging;
    if site_config.site ne "staging" then 
        base_url = config.rows.url_prod;
    endif      
}}
<html lang="{{lg.rows.lg}}" class="login_html">
    <head>
        <meta http-equiv="Content-type" content="text/html;charset=UTF-8"/>
        <title>{{esc(filter:"html",structure.rows{"meta_title_" .+ lg.rows.lg});}}</title>
        <!-- Generated by {{ user.username; " " ; datetime();  " "; files = filenames(); for file in files.filenames do file; " ;  "; endfor }} -->
    </head>
    <body class="sn login_body error_body">
        <div id="login">
            <div class="login-header login-demande-wrapper">
                {{sn_ct(edit:false,"contact contact message info", publish:"/publish/email.sn",uids:page.rows.uid,module:"sed_contact")}}
            </div><!--END login-header-->
            <hr />
            <div class="login-general login-demande-wrapper login-demande-wrapper-email">
                    <table class="container-fluid">
                        <tr class="row ln">
                            <td class="left" width="200">
                                <label>
                                    {{sn_ct(edit:false,"contact full name", publish:"/publish/email.sn",uids:page.rows.uid,module:"sed_contact")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>\{{contact.rows.name}}</label>
                            </td>
                        </tr>  
                        <tr class="row ln">
                            <td class="left">
                                <label>
                                    {{sn_ct(edit:false,"contact Phone", publish:"/publish/email.sn",uids:page.rows.uid,module:"sed_contact")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>\{{contact.rows.phone}}</label>
                            </td>
                        </tr>   
                        <tr class="row ln">
                            <td class="left">
                                <label>
                                    {{sn_ct(edit:false,"contact Email", publish:"/publish/email.sn",uids:page.rows.uid,module:"sed_contact")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>\{{contact.rows.email}}</label>
                            </td>
                        </tr> 
                        <tr class="row ln">
                            <td class="left">
                                <label>
                                    {{sn_ct(edit:false,"contact subject", publish:"/publish/email.sn",uids:page.rows.uid,module:"sed_contact")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>\{{contact.rows.subject}}</label>
                            </td>
                        </tr>                         
                        <tr class="row ln">
                            <td class="left">
                                <label>
                                    {{sn_ct(edit:false,"contact Message", publish:"/publish/email.sn",uids:page.rows.uid,module:"sed_contact")}}:
                                </label>
                            </td>
                            <td class="right">
                                <label>
                                    \{{contact.rows.message}}
                                </label>
                            </td>
                        </tr>                                                                                                                    
                    </table>
            </div> <!-- END login_content -->
        </div><!--end/ LOGIN WRAPPER-->
    </body>
</html>